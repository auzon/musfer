{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "attach api-gateway",
            "type": "java",
            "request": "attach",
            "port": 5051,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/api-gateway",
            "remoteRoot": "/app"
        },
        {
            "name": "attach auth-service",
            "type": "java",
